#!/usr/bin/env node


var exec = require('child_process').exec
  , path = require('path');

function open(command, callback) {

  if (process.env.SUDO_USER) {
    command = 'sudo -u ' + process.env.SUDO_USER + ' ' + command;
  }
  return exec(command, callback);
}

function escape(s) {
  return s.replace(/"/g, '\\\"');
}

open("npm install -g adapt-make", function() {
  open("adapt-make install", function() {
    console.log("Finished updating.");
  });
});